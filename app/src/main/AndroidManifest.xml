<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sush.answerit">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application

        android:allowBackup="true"
        android:icon="@drawable/answerit_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login"             android:screenOrientation="portrait"/>
        <activity android:name=".Register"          android:screenOrientation="portrait"/>
        <activity android:name=".Main_Screen"       android:screenOrientation="portrait"/>
        <activity android:name=".Choices"           android:screenOrientation="portrait"/>
        <activity android:name=".Level"             android:screenOrientation="portrait"/>
        <activity android:name=".GoForIt"           android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ResultPage"        android:screenOrientation="portrait"/>
        <activity android:name=".CodeReveals"       android:screenOrientation="portrait"/>
        <activity android:name=".Logo"              android:screenOrientation="portrait"/>



        <activity android:name=".Question_1" android:screenOrientation="portrait"/>
        <activity android:name=".Question_2" android:screenOrientation="portrait"/>
        <activity android:name=".ShowAnswer" android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>